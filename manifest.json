{
  "name": "Page Redder",
  "description": "Make the current page red",
  "version": "2.0",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "http://*/*",
    "https://*/*"    
  ],
  "browser_action": {
    "default_title": "A search engine for your self",
    "default_popup": "popup.html"
  },
  "manifest_version": 2,
  "icons":{
    "128": "icon128.png"
  },
  "content_scripts": [ {
   "js": ["runMe.js"],
   "css": [ "myCss.css" ],
   "matches": [ "<all_urls>" ]
} ]
}
